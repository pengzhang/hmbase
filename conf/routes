# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index



# Assist
GET     /captcha                                Assist.captcha
POST    /upload/file                            Assist.upload

# Admin Controller
GET     /admin                                  AdminController.index
GET     /admin/login                            AdminController.login
POST    /admin/login                            AdminController.doLogin

# Api Controller
POST    /api/login                              ApiController.login
POST    /api/register                           ApiController.register


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /upload/                                staticDir:data/attachments

# Catch all
*       /{controller}/{action}                  {controller}.{action}
