# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index


# User Controller
GET     /user/login                             UserController.login
POST    /user/login                             UserController.doLogin
GET     /user/logout                            UserController.logout

# Assist
GET     /captcha                                Assist.captcha
POST    /upload/file                            Assist.upload

# Admin Controller
GET     /admin                                  AdminController.index

GET     /admin/users                            AdminController.users
POST    /admin/users/create                     AdminUser.createUser
POST    /admin/users/modify                     AdminUser.modifyUser
GET     /admin/users/remove                     AdminUser.removeUser
GET     /admin/users/data                       AdminUser.usersData

GET     /admin/categories                       AdminController.categories
POST    /admin/categories/create                AdminCategory.createCategory
POST    /admin/categories/modify                AdminCategory.modifyCategory
GET     /admin/categories/remove                AdminCategory.removeCategory
GET     /admin/categories/data                  AdminCategory.categoriesData

GET     /admin/posts                            AdminController.posts
POST    /admin/posts/create                     AdminPost.createPost
POST    /admin/posts/modify                     AdminPost.modifyPost
GET     /admin/posts/remove                     AdminPost.removePost
GET     /admin/posts/data                       AdminPost.postsData

GET     /admin/comments                         AdminController.comments
POST    /admin/comments/create                  AdminComment.createComment
POST    /admin/comments/modify                  AdminComment.modifyComment
GET     /admin/comments/remove                  AdminComment.removeComment
GET     /admin/comments/data                    AdminComment.commentsData

GET     /admin/images                           AdminController.images
POST    /admin/images/create                    AdminImage.createImage
POST    /admin/images/modify                    AdminImage.modifyImage
GET     /admin/images/remove                    AdminImage.removeImage
GET     /admin/images/data                      AdminImage.imagesData

# Api Controller
POST    /api/login                              ApiController.login
POST    /api/register                           ApiController.register


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
#GET     /upload/                                staticDir:data/attachments

# Catch all
*       /{controller}/{action}                  {controller}.{action}
