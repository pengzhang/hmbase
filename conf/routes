# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index


# User Controller
GET     /user/login                             UserController.login
POST    /user/login                             UserController.doLogin
GET     /user/logout                            UserController.logout

# Assist
GET     /captcha                                Assist.captcha
POST    /upload/file                            Assist.upload

# Admin Controller
GET     /admin                                  AdminController.index

GET     /admin/users                            AdminController.users
POST    /admin/users/create                     admin.AdminUser.createUser
POST    /admin/users/modify                     admin.AdminUser.modifyUser
GET     /admin/users/remove                     admin.AdminUser.removeUser
GET     /admin/users/data                       admin.AdminUser.usersData

GET     /admin/users/profile                    AdminController.userProfiles
POST    /admin/users/profile/create             admin.AdminUser.createUserProfile
POST    /admin/users/profile/modify             admin.AdminUser.modifyUserProfile
GET     /admin/users/profile/remove             admin.AdminUser.removeUserProfile
GET     /admin/users/profile/data               admin.AdminUser.userProfilesData

GET     /admin/categories                       AdminController.categories
POST    /admin/categories/create                admin.AdminCategory.createCategory
POST    /admin/categories/modify                admin.AdminCategory.modifyCategory
GET     /admin/categories/remove                admin.AdminCategory.removeCategory
GET     /admin/categories/data                  admin.AdminCategory.categoriesData

GET     /admin/tags                             AdminController.tags
POST    /admin/tags/create                      admin.AdminCategory.createTag
POST    /admin/tags/modify                      admin.AdminTag.modifyTag
GET     /admin/tags/remove                      admin.AdminTag.removeTag
GET     /admin/tags/data                        admin.AdminTag.TagData

GET     /admin/posts                            AdminController.posts
POST    /admin/posts/create                     admin.AdminPost.createPost
POST    /admin/posts/modify                     admin.AdminPost.modifyPost
GET     /admin/posts/remove                     admin.AdminPost.removePost
GET     /admin/posts/data                       admin.AdminPost.postsData

GET     /admin/comments                         AdminController.comments
POST    /admin/comments/create                  admin.AdminComment.createComment
POST    /admin/comments/modify                  admin.AdminComment.modifyComment
GET     /admin/comments/remove                  admin.AdminComment.removeComment
GET     /admin/comments/data                    admin.AdminComment.commentsData

GET     /admin/images                           AdminController.images
POST    /admin/images/create                    admin.AdminImage.createImage
POST    /admin/images/modify                    admin.AdminImage.modifyImage
GET     /admin/images/remove                    admin.AdminImage.removeImage
GET     /admin/images/data                      admin.AdminImage.imagesData

# Api Controller
POST    /api/login                              ApiController.login
POST    /api/register                           ApiController.register


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
#GET     /upload/                                staticDir:data/attachments

# Catch all
*       /{controller}/{action}                  {controller}.{action}
